extends layout

block content
  .container
    h1.text-center.text-white Add a Video
    hr
    .add-form.text-center.margin-top-40
      form
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-film
            input#title.form-control(type='text', name='title', placeholder='Enter title')
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-picture
            input#description.form-control(type='text', name='description', placeholder='Enter description')
block scripts
  include ./includes/scripts